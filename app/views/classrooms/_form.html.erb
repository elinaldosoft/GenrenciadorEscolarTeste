<%= form_for @classroom do |f| %>
<%= render 'shared/form_errors_messages', resource: @classroom %>

<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :student_id %>
      <%= f.collection_select :student_id, @students, :id, :name, { include_blank: true }, class: 'form-control'  %>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :course_id %>
      <%= f.collection_select :course_id, @courses, :id, :name, { include_blank: true }, class: 'form-control'  %>
    </div>
  </div>
</div>

<button type="submit" class="btn btn-sm btn-block btn-primary">
  <%= fa_icon :"floppy-disk" %> Salvar <%= tm Classroom %>
</button>
<% end %>
