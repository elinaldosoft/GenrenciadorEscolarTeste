<table class="table no-margin">
  <thead>
    <tr>
      <th><%= ta Classroom, :student_id %> <small>(<%= ta Classroom, :course_id %>)</small></th>
      <th width="200" class="text-center"><%= ta Classroom, :created_at %></th>
      <th width="200" class="text-right">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td>
          <h5>
            <div><%= student.name %></div>
          </h5>
        </td>
        <td class="text-center">
          <h5>
            <span class="bs-tooltip" title="<%= student.register_number %>">
              <%= student.register_number %>
            </span>
          </h5>
        </td>
        <td>
          <div class="text-right">
            <span class="text-danger bs-tooltip" data-title="cancelar" data-toggle="modal" data-target="#student_destroy_<%= student.id %>">
              Remover Aluno
            </span>
          </div>

          <%= bs_modal_confirm_destroy "student_destroy_#{student.id}", student_path(student) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
